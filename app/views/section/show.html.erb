<% @page_title = "Show Section" %>
<%= link_to("<< Back to List", {:action => 'index', :page_id => @page, :subject_id => @subject}, :class => 'back-link') %>

<div class="Section show">
	<h2>Show Section</h2>

	<table summary="Section detail view">
		<tr>
			<th>Section Name</th>
			<td><%= @section.name %></td>
		</tr>
		<tr>
			<th>Belongs to</th>
			<td><%= @page.name %></td>
		</tr>
		<tr>
			<th>Permalink</th>
			<td><%= @section.id %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @section.position %></td>
		</tr>
		<tr>
			<th>Visible?</th>
			<td><%= @section.visible ? 'true' : 'false' %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @section.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @section.updated_at %></td>
		</tr>
		<tr>
			<th>Content Type</th>
			<td><%= @section.content_type %></td>
		</tr>
		<tr>
			<th>Content</th>
			<td><%= @section.content %></td>
		</tr>
	</table>
</div>