<% @page_title = "Sections" %>
<%= link_to("<< Back to Pages", {:controller => 'pages', :action => 'index', :page_id => @page, :subject_id => @subject}, :class => 'back-link') %>

<div class="pages index">
	<h2>Sections</h2>

	<%= link_to("Add New Section", {:action => 'new', :id => @section, :page_id => @page, :subject_id => @subject}, :class => 'action new') %>

	<table class="listing" summary="Section list">
		<tr class="header">
			<th>Position</th>
			<th>Page ID</th>
			<th>Section Name</th>
			<th>Visible</th>
			<th>Actions</th>
		</tr>
		<% @section.each do |section| %>
		<tr>
			<td><%= section.position %></td>
			<td><%= section.page_id %></td>
			<td><%= section.name %></td>
			<td class="center"><%= status_tag(section.visible) %></td>
			<td class="actions">
				<%= link_to("Show", {:action => 'show', :id => section.id, :page_id => @page, :subject_id => @subject}, :class => 'action show') %>
				<%= link_to("Edit", {:action => 'edit', :id => section.id, :page_id => @page, :subject_id => @subject}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => section.id, :page_id => @page, :subject_id => @subject}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>