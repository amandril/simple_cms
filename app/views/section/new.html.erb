<% @page_title = "New Section" %>
<%= link_to("<< Back to List", {:action => 'index', :page_id => @page, :subject_id => @subject}, :class => 'back-link') %>

<div class="section new">
	<h2>Create Section</h2>

	<%= form_for(:section, :url => {:action => 'create', :page_id => @page, :subject_id => @subject}) do |f| %>

		<%= render(:partial => "sectionsform", :locals => {:f => f}) %>

		<div class="form-buttons">
			<%= submit_tag("Create Section") %>
		</div>

	<% end %>
</div>