<% @page_title = "Edit Page" %>
<%= link_to("<< Back to List", {:action => 'index', :subject_id => @subject.id}, :class => 'back-link') %>

<div class="Page edit">
	<h2>Update Page</h2>

	<%= form_for(:page, :url => {:action => 'update', :page_id => @page, :subject_id => @subject.id}) do |f| %>

		<%= render(:partial => "pagesform", :locals => {:f => f}) %>

		<div class="form-buttons">
			<%= submit_tag("Update Page") %>
		</div>

	<% end %>
</div>