<% @page_title = "Pages" %>
<%= link_to("<< Back to Subjects", {:controller => 'subjects', :action => 'index'}, :class => 'back-link') %>

<div class="pages index">
	<h2>Pages</h2>

	<%= link_to("Add New Page", {:action => 'new', :subject_id => @subject}, :class => 'action new') %>

	<table class="listing" summary="Page list">
		<tr class="header">
			<th width="30">&nbsp;</th>
			<th>Subject</th>
			<th>Page</th>
			<th>Permalink</th>
			<th>Visible</th>
			<th>Sections</th>
			<th>Actions</th>
		</tr>
		<% @page.each do |page| %>
		<tr>
			<td><%= page.position %></td>
			<td><%= page.subject.name if page.subject %></td>
			<td><%= page.name %></td>
			<td><%= page.permalink %></td>
			<td class="center"><%= status_tag(page.visible) %></td>
			<td class="center"><%= page.sections.size %></td>
			<td class="actions">
				<%= link_to("View Sections", {:controller => 'section', :action => 'index', :page_id => page.id, :subject_id => @subject}, :class => 'action index') %>
				<%= link_to("Show", {:action => 'show', :page_id => page.id, :subject_id => @subject}, :class => 'action show') %>
				<%= link_to("Edit", {:action => 'edit', :page_id => page.id, :subject_id => @subject}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :page_id => page.id, :subject_id => @subject}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>